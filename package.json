{
  "name": "rrcfg-tools",
  "displayName": "rr configuration tools",
  "description": "Tools for configuring and interacting with rr",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rrcfg-tools.helloWorld"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rrcfg-tools.helloWorld",
        "title": "Hello World"
      }
    ],
    "configuration": [
      {
        "title": "rrcfg-tools",
        "properties": {
          "rr.address": {
            "type": "string",
            "default": "localhost",
            "description": "Address where rr is running"
          },
          "rr.post": {
            "type": "integer",
            "default": 50505,
            "description": "Address where rr is running"
          }
        }
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  },
  "extensionDependencies": [
    "ms-vscode.cpptools",
    "augustocdias.tasks-shell-input"
  ]
}

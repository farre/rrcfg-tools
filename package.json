{
  "name": "rrcfg-tools",
  "displayName": "rr configuration tools",
  "description": "Tools for configuring and interacting with rr",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/farre/rrcfg-tools.git"
  },
  "engines": {
    "vscode": "^1.61.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:workbench.action.tasks.runTask",
    "onCommand:workbench.action.tasks.reRunTask"
  ],
  "main": "./extension.js",
  "directories": {
    "src": "./src"
  },
  "publisher": "farre",
  "contributes": {
    "configuration": [
      {
        "title": "rrcfg-tools",
        "properties": {
          "rrcfg-tools.address": {
            "type": "string",
            "default": "localhost",
            "description": "Address where rr is running"
          },
          "rrcfg-tools.port": {
            "type": "integer",
            "default": 50505,
            "description": "Port where rr is running"
          }
        }
      }
    ],
    "taskDefinitions": [
      {
        "type": "rrcfg-tools"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "yarn run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.61.0",
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "eslint": "^7.32.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.1",
    "typescript": "^4.4.3",
    "@vscode/test-electron": "^1.6.2"
  },
  "extensionDependencies": [
    "ms-vscode.cpptools"
  ]
}
